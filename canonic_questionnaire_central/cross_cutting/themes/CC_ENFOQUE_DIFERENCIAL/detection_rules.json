{
  "$schema": "../../detection_rules_schema.json",
  "_schema_version": "2.0.0",
  
  "theme_id": "CC_ENFOQUE_DIFERENCIAL",
  "name": "Enfoque Diferencial",
  
  "detection_strategy": {
    "primary_method": "MULTI_SIGNAL_FUSION",
    
    "signals": [
      {
        "signal_id": "SIG-ED-001",
        "name": "explicit_mention",
        "type": "KEYWORD_MATCH",
        "description": "Mención explícita del concepto",
        "keywords": [
          "enfoque diferencial",
          "perspectiva diferencial",
          "atención diferenciada",
          "enfoque diferenciado"
        ],
        "weight": 0.40,
        "minimum_matches": 1,
        "context_validation": {
          "must_not_be_negated": true,
          "window_size": 10
        }
      },
      {
        "signal_id": "SIG-ED-002",
        "name": "population_disaggregation",
        "type": "PATTERN_MATCH",
        "description": "Menciones de poblaciones específicas",
        "mc_reference": "MC06",
        "weight": 0.30,
        "minimum_matches": 2,
        "rationale": "Menciones de poblaciones específicas indican enfoque diferencial"
      },
      {
        "signal_id": "SIG-ED-003",
        "name": "intersectional_analysis",
        "type": "CO_OCCURRENCE",
        "description": "Análisis interseccional",
        "term_pairs": [
          ["mujeres", "indígenas"],
          ["jóvenes", "rurales"],
          ["víctimas", "discapacidad"],
          ["niños", "afrodescendientes"],
          ["adultos mayores", "mujeres"],
          ["migrantes", "mujeres"]
        ],
        "window_size": 50,
        "weight": 0.20,
        "minimum_pairs": 1
      },
      {
        "signal_id": "SIG-ED-004",
        "name": "adjusted_measures",
        "type": "CAUSAL_PATTERN",
        "description": "Medidas ajustadas para poblaciones",
        "pattern": "(?i)(?:medidas|acciones|estrategias|programas)\\s+(?:ajustadas?|diferenciadas?|específicas?|focalizadas?)\\s+para",
        "weight": 0.10,
        "requires_population_mention": true
      }
    ],
    
    "aggregation": {
      "method": "WEIGHTED_SUM_WITH_THRESHOLD",
      "threshold": 0.50,
      "formula": "score = sum(signal.weight * signal.match_score) / sum(signal.weight)",
      "minimum_signals_required": 2
    }
  },
  
  "scoring_impact": {
    "when_detected": {
      "boost_questions": [
        "Q001", "Q002", "Q003", "Q004", "Q005",
        "Q031", "Q032", "Q033",
        "Q061", "Q062",
        "Q151", "Q152", "Q153"
      ],
      "boost_amount": 0.15,
      "boost_type": "ADDITIVE",
      "cap_at_max_score": true
    },
    "when_missing": {
      "penalty_questions": ["Q001", "Q031", "Q061"],
      "penalty_amount": 0.10,
      "penalty_type": "MULTIPLICATIVE",
      "penalty_conditions": {
        "only_if_policy_area_in": ["PA01", "PA05", "PA06"]
      }
    },
    "confidence_modifiers": {
      "explicit_mention_bonus": 0.20,
      "only_implicit_penalty": -0.05
    }
  },
  
  "validation": {
    "required_in_dimensions": ["DIM01", "DIM02"],
    "required_in_policy_areas": ["PA01", "PA05", "PA06"],
    "recommended_in_policy_areas": ["PA02", "PA04", "PA07"],
    "validation_rules": [
      {
        "rule_id": "INTERDEP-ED-001",
        "description": "Si PA01 presente, debe haber mención explícita",
        "condition": "policy_area == 'PA01' AND signal_ED_001.matches == 0",
        "severity": "WARNING",
        "message": "PA01 (Mujeres/Género) sin mención explícita de enfoque diferencial"
      }
    ]
  },
  
  "required_capabilities": ["SEMANTIC_PROCESSING"],
  
  "testing": {
    "test_file": "tests/cross_cutting/test_cc_enfoque_diferencial.py",
    "golden_examples": [
      {
        "input": "El plan adopta un enfoque diferencial para mujeres indígenas...",
        "expected_detected": true,
        "expected_confidence_min": 0.70
      },
      {
        "input": "Se realizarán actividades generales para la población...",
        "expected_detected": false
      }
    ]
  }
}
