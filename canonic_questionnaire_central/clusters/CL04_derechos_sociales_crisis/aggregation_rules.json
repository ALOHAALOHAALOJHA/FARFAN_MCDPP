{
  "$schema": "../aggregation_schema.json",
  "_schema_version": "2.0.0",
  
  "cluster_id": "CL04",
  "cluster_name": "Derechos Sociales y Crisis",
  "cluster_description": "Agrupa políticas de atención a crisis humanitarias y poblaciones en situación especial",
  
  "composition": {
    "policy_areas": ["PA09", "PA10"],
    "policy_area_names": {
      "PA09": "Crisis Humanitaria y PPL",
      "PA10": "Migración"
    }
  },
  
  "aggregation": {
    "method": "WEIGHTED_AVERAGE_WITH_COHERENCE_BONUS",
    
    "policy_area_weights": {
      "PA09": 0.50,
      "PA10": 0.50
    },
    
    "coherence_bonus": {
      "enabled": true,
      "max_bonus": 0.10
    },
    
    "final_formula": "MESO_SCORE = (PA09_score * 0.50 + PA10_score * 0.50) + coherence_bonus"
  },
  
  "meso_question": {
    "question_id": "MESO-CL04",
    "text": {
      "es": "¿El plan articula coherentemente la atención a crisis humanitarias con las políticas migratorias?",
      "en": "Does the plan coherently articulate humanitarian crisis response with migration policies?"
    }
  },
  
  "thresholds": {
    "EXCELENTE": {"min": 0.85},
    "BUENO": {"min": 0.70},
    "ACEPTABLE": {"min": 0.55},
    "INSUFICIENTE": {"min": 0.0}
  }
}
