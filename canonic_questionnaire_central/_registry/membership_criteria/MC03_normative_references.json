  "criterion_id": "MC03",
  "name": "Normative References",
  "description_es": "Detecta referencias normativas: Leyes, Decretos, CONPES, Artículos constitucionales",
  "description_en": "Detects normative references: Laws, Decrees, CONPES, Constitutional articles",
  "signal_type": "NORMATIVE_REFERENCE",
  "implementation_status": "PARTIAL",
  "extractor_class": "NormativeReferenceExtractor",
  "detection": {
    "primary_method": "COMPOUND_PATTERN",
    "_calibration_reference": "extractor_calibration.json/signal_type_catalog/NORMATIVE_REFERENCE",
    "components": [
      {
        "component_id": "NR-LEY",
        "name": "ley_pattern",
        "detection": {
          "type": "REGEX",
          "pattern": "Ley\\s+(\\d+)\\s+de\\s+(\\d{4})",
          "examples": [
            "Ley 2294 de 2023",
            "Ley 152 de 1994",
            "Ley 1448 de 2011"
          ]
        },
        "confidence_base": 0.92,
        "validation": "year >= 1991 AND year <= 2026"
      },
      {
        "component_id": "NR-DECRETO",
        "name": "decreto_pattern",
        "detection": {
          "type": "REGEX",
          "pattern": "Decreto\\s+(\\d+)\\s+de\\s+(\\d{4})",
          "examples": [
            "Decreto 893 de 2017",
            "Decreto 1865 de 1994"
          ]
        },
        "confidence_base": 0.90
      },
      {
        "component_id": "NR-CONPES",
        "name": "conpes_pattern",
        "detection": {
          "type": "REGEX",
          "pattern": "CONPES\\s+(\\d+)(?:\\s+de\\s+(\\d{4}))?",
          "examples": [
            "CONPES 3932 de 2018",
            "CONPES 4080"
          ]
        },
        "confidence_base": 0.93,
        "validation": "number >= 3000"
      },
      {
        "component_id": "NR-ARTICULO",
        "name": "articulo_pattern",
        "detection": {
          "type": "REGEX",
          "pattern": "Art(?:ículo|\\.)?\\s+(\\d+)",
          "examples": [
            "Artículo 339",
            "Art. 342"
          ]
        },
        "confidence_base": 0.70,
        "note": "Lower confidence for standalone articles without context"
      }
    ],
    "empirical_frequency": {
      "_source": "extractor_calibration.json (14 planes PDT Colombia 2024-2027)",
