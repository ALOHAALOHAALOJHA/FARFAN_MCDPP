{
  "$schema": "../schema.json",
  "_schema_version": "2.0.0",
  
  "criterion_id": "MC07",
  "name": "Temporal Markers",
  "description_es": "Detecta marcadores temporales: años, períodos, vigencias",
  "description_en": "Detects temporal markers: years, periods, terms",
  
  "signal_type": "TEMPORAL_MARKER",
  "implementation_status": "PARTIAL",
  "extractor_class": "TemporalMarkerExtractor",
  
  "detection": {
    "primary_method": "REGEX",
    "_source": "corpus_thresholds_weights.json",
    
    "components": [
      {
        "component_id": "TM-YEAR",
        "name": "year_standalone",
        "detection": {
          "type": "REGEX",
          "pattern": "\\b(20[1-3]\\d)\\b",
          "validation": "year >= 2015 AND year <= 2035"
        },
        "confidence_base": 0.95
      },
      {
        "component_id": "TM-PERIOD",
        "name": "period_range",
        "detection": {
          "type": "REGEX",
          "pattern": "(20[2-3]\\d)\\s*[-–]\\s*(20[2-3]\\d)",
          "validation": "start_year < end_year"
        },
        "confidence_base": 0.93
      },
      {
        "component_id": "TM-VIGENCIA",
        "name": "vigencia",
        "detection": {
          "type": "REGEX",
          "patterns": [
            "vigencia\\s+(20[2-3]\\d)",
            "cuatrienio\\s+(20[2-3]\\d)\\s*[-–]\\s*(20[2-3]\\d)"
          ]
        },
        "confidence_base": 0.91
      },
      {
        "component_id": "TM-CUATRIENIO",
        "name": "cuatrienio_pdt",
        "detection": {
          "type": "KEYWORD",
          "keywords": ["2024-2027", "cuatrienio 2024", "periodo de gobierno"]
        },
        "confidence_base": 0.90
      }
    ]
  },
  
  "scoring_impact": {
    "dimension_boost": {
      "DIM01": 0.05,
      "DIM03": 0.05,
      "DIM04": 0.10
    },
    "cross_cutting_boost": {
      "CC_MECANISMOS_SEGUIMIENTO": 0.10
    }
  },
  
  "required_capabilities": ["TEMPORAL_REASONING"],
  
  "testing": {
    "test_file": "tests/membership_criteria/test_mc07_temporal.py",
    "expected_precision": 0.95,
    "expected_recall": 0.90
  }
}
