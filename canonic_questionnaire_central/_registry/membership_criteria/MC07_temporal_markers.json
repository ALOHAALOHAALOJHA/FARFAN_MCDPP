{
  "$schema": "../schema.json",
  "_schema_version": "2.0.0",
  "_last_updated": "2026-01-09",
  "_calibration_source": "../_calibration/extractor_calibration.json",
  "criterion_id": "MC07",
  "name": "Temporal Markers",
  "description_es": "Detecta marcadores temporales: años, períodos, vigencias",
  "description_en": "Detects temporal markers: years, periods, terms",
  "signal_type": "TEMPORAL_MARKER",
  "implementation_status": "PARTIAL",
  "extractor_class": "TemporalMarkerExtractor",
  "detection": {
    "primary_method": "REGEX",
    "_calibration_reference": "extractor_calibration.json/signal_type_catalog/TEMPORAL_CONSISTENCY",
    "components": [
      {
        "component_id": "TM-YEAR",
        "name": "year_standalone",
        "detection": {
          "type": "REGEX",
          "pattern": "\\b(19\\d{2}|20[0-2]\\d)\\b",
          "validation": "year >= 1990 AND year <= 2050"
        },
        "confidence_base": 0.95
      },
      {
        "component_id": "TM-PERIOD",
        "name": "period_range",
        "detection": {
          "type": "REGEX",
          "pattern": "(\\d{4})\\s*[-–—]\\s*(\\d{4})",
          "validation": "start_year < end_year",
          "examples": [
            "2024-2027",
            "2020–2023",
            "2018—2022"
          ]
        },
        "confidence_base": 0.93
      },
      {
        "component_id": "TM-VIGENCIA",
        "name": "vigencia",
        "detection": {
          "type": "REGEX",
          "patterns": [
            "vigencia\\s+(20[2-3]\\d)",
            "cuatrienio\\s+(20[2-3]\\d)\\s*[-–]\\s*(20[2-3]\\d)"
          ],
          "examples": [
            "vigencia 2024",
            "Vigencia 2025"
          ]
        },
        "confidence_base": 0.91
      },
      {
        "component_id": "TM-CUATRIENIO",
        "name": "cuatrienio_pdt",
        "detection": {
          "type": "KEYWORD",
          "keywords": [
            "2024-2027",
            "cuatrienio 2024",
            "periodo de gobierno"
          ]
        },
        "confidence_base": 0.90
      }
    ],
    "empirical_frequency": {
      "_source": "extractor_calibration.json (14 planes PDT Colombia 2024-2027)",
      "periodos_cuatrienales": {
        "mean": 320,
        "range": [
          116,
          541
        ]
      },
      "vigencias_anuales": {
        "mean": 8,
        "range": [
          0,
          11
        ]
      },
      "años_unicos_referenciados": {
        "mean": 18,
        "range": [
          10,
          29
        ]
      },
      "series_historicas": "6-10 años atrás typical"
    },
    "temporal_heuristics": {
      "plan_period": "2024-2027 (universal)",
      "baseline_typical": "2020-2023",
      "historical_series": "2015-2023",
      "projection": "2027-2035 (some plans)"
    },
    "consistency_validation": {
      "baseline_before_target": "baseline_year < target_year",
      "baseline_recent": "target_year - baseline_year <= 5",
      "no_future_baseline": "baseline_year <= current_year",
      "sequential_series": "años en serie histórica son consecutivos o tienen gaps explicados"
    }
  },
  "scoring_impact": {
    "dimension_boost": {
      "DIM01": 0.05,
      "DIM03": 0.05,
      "DIM04": 0.10
    },
    "cross_cutting_boost": {
      "CC_MECANISMOS_SEGUIMIENTO": 0.10
    }
  },
  "dimension_binding": {
    "_reference": "../_bindings/mc_to_dimensions.json",
    "primary_dimensions": [
      "DIM01",
