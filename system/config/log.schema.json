{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meta Layer Log Schema",
  "description": "Schema for structured logs conforming to meta layer transparency requirements",
  "type": "object",
  "required": [
    "timestamp",
    "level",
    "method_name",
    "phase",
    "message"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
      "description": "Log level"
    },
    "method_name": {
      "type": "string",
      "description": "Fully qualified method name"
    },
    "phase": {
      "type": "string",
      "description": "Pipeline phase identifier"
    },
    "message": {
      "type": "string",
      "description": "Log message content"
    },
    "execution_time_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Execution time in milliseconds"
    },
    "memory_mb": {
      "type": "number",
      "minimum": 0,
      "description": "Memory usage in megabytes"
    },
    "correlation_id": {
      "type": "string",
      "description": "Execution correlation identifier"
    },
    "seed": {
      "type": "integer",
      "description": "Random seed for deterministic execution"
    },
    "error": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "traceback": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional context metadata"
    }
  }
}
