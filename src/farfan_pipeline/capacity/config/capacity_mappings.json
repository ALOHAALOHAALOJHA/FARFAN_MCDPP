  "mapping_rules": {
    "_description": "Rules for mapping methods to capacity types based on classification",
    "N1-EMP": {
      "primary_capacity": "CA-I",
      "secondary_capacity": null,
      "split_rule": null,
      "rationale": "Empirical extraction maps directly to Individual Analytical"
    },
    "N2-INF": {
      "primary_capacity": "CA-O",
      "secondary_capacity": "CO-O",
      "split_rule": "class_based",
      "primary_class_keywords": ["Semantic", "Bayesian", "Numerical", "Analyzer", "Adaptive", "Prior", "Generative"],
      "secondary_class_keywords": ["Mechanism", "Teoria", "Cambio", "Evidence", "Integrator", "Dispersion", "Theory"],
      "rationale": "Inferential methods split between Analytical-Org and Operational-Org"
    },
    "N3-AUD": {
      "primary_capacity": "CO-S",
      "secondary_capacity": "CP-O",
      "split_rule": "name_based",
      "primary_method_keywords": ["validate", "audit", "check", "verify", "test", "assess"],
      "secondary_method_keywords": ["detect", "contradict", "consistency", "coherence", "conflict", "contradiction"],
      "rationale": "Audit methods split between Operational-Systemic and Political-Org"
    }
  },

