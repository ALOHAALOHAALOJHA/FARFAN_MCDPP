{
  "_metadata": {
    "name": "Policy Capacity Mappings",
    "version": "1.0.0",
    "framework": "Wu, Ramesh & Howlett (2015)",
    "description": "Configuration for mapping epistemological levels to capacity types",
    "last_updated": "2026-01-26",
    "total_methods_supported": 652
  },

  "epistemology_to_skill_mapping": {
    "_description": "Maps epistemological foundations to policy skills",
    "Empirismo positivista": {
      "primary_skill": "Analytical",
      "rationale": "Fact-based empirical observation aligns with analytical capacity"
    },
    "Bayesianismo subjetivista": {
      "primary_skill": "Political",
      "rationale": "Belief-based probabilistic reasoning aligns with political judgment"
    },
    "Falsacionismo popperiano": {
      "primary_skill": "Operational",
      "rationale": "Testability and validation aligns with operational implementation"
    },
    "Instrumentalismo": {
      "primary_skill": "Operational",
      "rationale": "Practical utility focus aligns with operational concerns"
    },
    "Reflexividad crítica": {
      "primary_skill": "Analytical",
      "rationale": "Meta-analysis requires analytical sophistication"
    }
  },

  "level_to_capacity_level_mapping": {
    "_description": "Maps method levels to policy capacity levels",
    "N0-INFRA": {
      "capacity_level": "Individual",
      "rationale": "Infrastructure support operates at individual tool level"
    },
    "N1-EMP": {
      "capacity_level": "Individual",
      "rationale": "Empirical extraction is individual analytical work"
    },
    "N2-INF": {
      "capacity_level": "Organizational",
      "rationale": "Inferential computation requires organizational resources"
    },
    "N3-AUD": {
      "capacity_level": "Systemic",
      "rationale": "Audit and validation operates at systemic level with veto power"
    },
    "N4-META": {
      "capacity_level": "Systemic",
      "rationale": "Meta-analysis synthesizes across systemic scope"
    }
  },

