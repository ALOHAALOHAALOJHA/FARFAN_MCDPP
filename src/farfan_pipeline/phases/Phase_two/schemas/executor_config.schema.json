{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://canonic-phases.internal/phase2/schemas/executor_config.schema.json",
  "title": "ExecutorConfig",
  "description": "Configuration schema for Phase 2 executors. Version 1.0.0. Effective: 2025-12-18.",
  "type": "object",
  "required": [
    "schema_version",
    "executor_id",
    "executor_class",
    "contract_types",
    "determinism",
    "resource_limits",
    "created_at"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0",
      "description": "Schema version for compatibility verification"
    },
    "executor_id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]{2,63}$",
      "description": "Unique executor identifier (snake_case, 3-64 chars)"
    },
    "executor_class": {
      "type": "string",
      "pattern": "^[A-Z][a-zA-Z0-9]+Executor$",
      "description": "Executor class name (PascalCase, ends with Executor)"
    },
    "contract_types": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-zA-Z0-9]+Payload$"
      },
      "description": "Contract payload types this executor handles"
    },
    "determinism": {
      "type": "object",
      "required": ["is_deterministic", "seed_strategy"],
      "additionalProperties": false,
      "properties": {
        "is_deterministic": {
          "type": "boolean",
          "description": "Whether executor produces identical outputs for identical inputs"
        },
        "seed_strategy": {
          "type": "string",
          "enum": ["FIXED", "PARAMETERIZED", "NOT_APPLICABLE"],
          "description": "How randomness is controlled"
        },
        "default_seed": {
          "type": "integer",
          "minimum": 0,
          "description": "Default seed value when seed_strategy is FIXED or PARAMETERIZED"
        }
      }
    },
    "resource_limits": {
      "type": "object",
      "required": ["max_memory_mb", "max_cpu_seconds", "max_concurrent_tasks"],
      "additionalProperties": false,
      "properties": {
        "max_memory_mb": {
          "type": "integer",
          "minimum": 64,
          "maximum": 65536,
          "description": "Maximum memory allocation in megabytes"
        },
        "max_cpu_seconds": {
          "type": "integer",
          "minimum": 1,
          "maximum": 86400,
          "description": "Maximum CPU time per task in seconds"
        },
        "max_concurrent_tasks": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum concurrent task executions"
        }
      }
    },
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["contract_name", "enforcement_level"],
        "additionalProperties": false,
        "properties": {
          "contract_name": {
            "type": "string",
            "enum": [
              "RoutingContract",
              "ConcurrencyDeterminism",
              "ContextImmutability",
              "PermutationInvariance",
              "RuntimeContracts",
              "SnapshotContract"
            ]
          },
          "enforcement_level": {
            "type": "string",
            "enum": ["FATAL", "WARNING", "DISABLED"],
            "description": "How violations are handled"
          }
        }
      },
      "description": "Dura Lex contracts enforced on this executor"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of config creation"
    },
    "content_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of config content for integrity verification"
    }
  }
}
