{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SISAS Contract Schema",
  "type": "object",
  "required": ["contract_id", "contract_type", "status", "version"],
  "properties": {
    "contract_id": { "type": "string" },
    "contract_type": {
      "type": "string",
      "enum": ["publication", "consumption", "irrigation"]
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "suspended", "terminated"]
    },
    "version": { "type": "string" },
    
    "publisher_vehicle": { "type": "string" },
    "allowed_signal_types": {
      "type": "array",
      "items": { "type": "string" }
    },
    
    "consumer_id": { "type": "string" },
    "subscribed_signal_types": {
      "type": "array",
      "items": { "type": "string" }
    },
    
    "source_file": { "type": "string" },
    "vehicles": {
      "type": "array",
      "items": { "type": "string" }
    },
    "consumers": {
      "type": "array",
      "items": { "type": "string" }
    },
    "generated_signals": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}