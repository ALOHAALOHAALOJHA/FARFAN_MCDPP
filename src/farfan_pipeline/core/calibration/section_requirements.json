{
  "specification_metadata": {
    "title": "PDT Section Requirements Specification",
    "version": "1.0.0",
    "description": "Defines validation thresholds for PDT sections including minimum tokens, keywords, numbers, and source citations required for compliance",
    "created": "2024",
    "based_on": "canonic_description_unit_analysis.json and unit_layer.py",
    "scope": "Section-level validation criteria for M (Mandatory Sections) component of Unit Layer evaluation"
  },
  "section_thresholds": {
    "Diagnóstico": {
      "label": "Diagnóstico territorial (Caracterización)",
      "description": "Analysis of territorial gaps, socioeconomic characterization, and sectoral diagnosis. Foundation for strategic planning.",
      "min_tokens": 500,
      "min_keywords": 3,
      "min_numbers": 5,
      "min_sources": 2,
      "weight": 2.0,
      "is_critical": true,
      "required_keywords": [
        "brecha",
        "brechas",
        "DANE",
        "caracterización",
        "problemática",
        "necesidad",
        "déficit",
        "carencia"
      ],
      "required_sources": [
        "DANE",
        "Medicina Legal",
        "SISBEN",
        "Ministerio de Salud",
        "ADRES",
        "DNP"
      ],
      "content_expectations": {
        "must_include": [
          "statistical_data",
          "gap_analysis",
          "territorial_characterization",
          "sectoral_diagnosis"
        ],
        "typical_location": "pages 10-70",
        "typical_subsections": [
          "Marco normativo y alineación",
          "Metodología y participación",
          "Diagnóstico territorial (Caracterización)"
        ]
      },
      "quality_indicators": {
        "high_quality": {
          "description": "Detailed and disaggregated data by gender and zones, identification of direct and structural causes",
          "score": "0.9-1.0",
          "characteristics": [
            "4+ sources cited",
            "10+ quantitative indicators",
            "Disaggregated by demographic variables",
            "Clear causal analysis"
          ]
        },
        "medium_quality": {
          "description": "Recognition of major problems with partial data, lacks deep conflict analysis",
          "score": "0.6-0.8",
          "characteristics": [
            "2-3 sources cited",
            "5-9 quantitative indicators",
            "Some disaggregation",
            "Basic problem identification"
          ]
        },
        "low_quality": {
          "description": "Absent or weak diagnosis, missing specific data, heavy use of S/D placeholders",
          "score": "<0.6",
          "characteristics": [
            "0-1 sources cited",
            "<5 quantitative indicators",
            "No disaggregation",
            "Generic statements"
          ]
        }
      }
    },
    "Parte Estratégica": {
      "label": "Parte estratégica",
      "description": "Programmatic component defining strategic lines, programs, goals, and indicators for the 4-year mandate",
      "min_tokens": 400,
      "min_keywords": 3,
      "min_numbers": 3,
      "weight": 2.0,
      "is_critical": true,
      "required_keywords": [
        "línea",
        "línea estratégica",
        "programa",
        "meta",
        "objetivo",
        "indicador",
        "eje"
      ],
      "content_expectations": {
        "must_include": [
          "strategic_lines",
          "programs",
          "goals",
          "indicators"
        ],
        "typical_location": "pages 70-250",
        "typical_subsections": [
          "Objetivos, principios y enfoques",
          "Líneas estratégicas / Ejes estratégicos",
          "Programas",
          "Metas e indicadores"
        ]
      },
      "organizational_structure": {
        "hierarchy": [
          "Línea Estratégica (H2)",
          "Programa (H3)",
          "Sector (H4)",
          "Metas e Indicadores"
        ],
        "required_links": {
          "diagnostico": "Explicit connection to identified problems",
          "ppi": "Traceability to investment projects"
        }
      },
      "quality_indicators": {
        "high_quality": {
          "description": "Clear objectives aligned with RRI and multipurpose cadastre, measurable products",
          "score": "0.9-1.0",
          "characteristics": [
            "All programs linked to strategic lines",
            "Quantifiable targets",
            "Clear causal logic",
            "Explicit alignment with national frameworks"
          ]
        },
        "medium_quality": {
          "description": "Generic products, improvement-oriented but not structural transformation",
          "score": "0.6-0.8",
          "characteristics": [
            "Most programs linked",
            "Some quantifiable targets",
            "Implicit causality",
            "Partial alignment"
          ]
        },
        "low_quality": {
          "description": "Undefined products, actions not related to diagnosed problems",
          "score": "<0.6",
          "characteristics": [
            "Weak program linkage",
            "Non-measurable targets",
            "Missing causal logic",
            "No alignment demonstrated"
          ]
        }
      }
    },
    "PPI": {
      "label": "Plan Plurianual de Inversiones",
      "description": "Financial component with budget matrix detailing investments by year (2024-2027), strategic line, program, and funding source",
      "min_tokens": 300,
      "min_keywords": 2,
      "min_numbers": 10,
      "weight": 2.0,
      "is_critical": true,
      "required_keywords": [
        "inversión",
        "presupuesto",
        "financiación",
        "SGP",
        "SGR",
        "costo",
        "recursos"
      ],
      "content_expectations": {
        "must_include": [
          "budget_matrix",
          "funding_sources",
          "temporal_distribution",
          "program_costs"
        ],
        "typical_location": "after page 250 or in annexes",
        "matrix_presence": "mandatory"
      },
      "required_components": {
        "plan_financiero": "Historical analysis of revenues, expenditures, public debt",
        "ppi_matrix": "Budget breakdown by year, strategic line, program, project, and funding sources"
      },
      "quality_indicators": {
        "high_quality": {
          "description": "Complete matrix with accounting closure, all rows with non-zero costs, clear traceability",
          "score": "0.9-1.0",
          "characteristics": [
            "100% accounting closure (±1%)",
            "90%+ non-zero rows",
            "All programs linked to strategic lines",
            "Multiple funding sources identified"
          ]
        },
        "medium_quality": {
          "description": "Matrix present with some gaps, acceptable accounting closure",
          "score": "0.6-0.8",
          "characteristics": [
            "95%+ accounting closure (±1%)",
            "80%+ non-zero rows",
            "Most programs linked",
            "Primary funding sources identified"
          ]
        },
        "low_quality": {
          "description": "Incomplete matrix, poor accounting closure, many zero rows",
          "score": "<0.6",
          "characteristics": [
            "<95% accounting closure",
            "<80% non-zero rows",
            "Weak program linkage",
            "Unclear funding sources"
          ]
        }
      }
    },
    "Seguimiento": {
      "label": "Seguimiento y evaluación",
      "description": "Monitoring and evaluation system defining indicators, measurement mechanisms, and reporting procedures",
      "min_tokens": 200,
      "min_keywords": 2,
      "min_numbers": 2,
      "weight": 1.0,
      "is_critical": false,
      "required_keywords": [
        "indicador",
        "seguimiento",
        "evaluación",
        "monitoreo",
        "SisPT",
        "POAI"
      ],
      "content_expectations": {
        "must_include": [
          "indicator_definitions",
          "monitoring_mechanisms",
          "reporting_schedule",
          "responsibilities"
        ],
        "typical_location": "final chapter",
        "typical_subsections": [
          "Mecanismos de seguimiento y control",
          "Indicadores de producto y resultado",
          "Plan de Acción",
          "Plataformas de seguimiento"
        ]
      },
      "required_components": {
        "indicator_system": "Product and result indicators with baselines and targets",
        "monitoring_platforms": "Reference to SisPT or equivalent tracking system",
        "action_plan": "POAI (Annual Operational Investment Plan) linkage"
      },
      "quality_indicators": {
        "high_quality": {
          "description": "Complete indicator system with clear measurement procedures and annual tracking",
          "score": "0.9-1.0"
        },
        "medium_quality": {
          "description": "Indicator system present with basic tracking mechanisms",
          "score": "0.6-0.8"
        },
        "low_quality": {
          "description": "Incomplete or generic monitoring system",
          "score": "<0.6"
        }
      }
    },
    "Marco Normativo": {
      "label": "Marco normativo y alineación",
      "description": "Legal and regulatory framework establishing constitutional and statutory foundations for the PDT",
      "min_tokens": 150,
      "min_keywords": 1,
      "weight": 1.0,
      "is_critical": false,
      "required_keywords": [
        "ley",
        "decreto",
        "constitución",
        "normativo",
        "legal",
        "acuerdo"
      ],
      "content_expectations": {
        "must_include": [
          "legal_citations",
          "constitutional_basis",
          "statutory_framework",
          "alignment_with_national_plans"
        ],
        "typical_location": "beginning of document",
        "typical_subsections": [
          "Preceptos constitucionales",
          "Ley 152 de 1994",
          "Articulación con PND",
          "Alineación con ODS"
        ]
      },
      "required_legal_references": [
        "Constitución Política (Art. 339)",
        "Ley 152 de 1994",
        "Ley 388 de 1997",
        "Plan Nacional de Desarrollo"
      ],
      "quality_indicators": {
        "high_quality": {
          "description": "Comprehensive legal framework with explicit citations and alignment demonstrations",
          "score": "0.9-1.0"
        },
        "medium_quality": {
          "description": "Basic legal references present",
          "score": "0.6-0.8"
        },
        "low_quality": {
          "description": "Minimal or absent legal framework",
          "score": "<0.6"
        }
      }
    }
  },
  "validation_rules": {
    "token_counting": {
      "method": "whitespace_split",
      "exclude": [
        "headers",
        "footers",
        "page_numbers",
        "table_of_contents"
      ],
      "include": [
        "body_text",
        "table_content",
        "list_items"
      ]
    },
    "keyword_matching": {
      "case_sensitive": false,
      "allow_stemming": true,
      "allow_partial_match": false,
      "scoring": {
        "exact_match": 1.0,
        "stemmed_match": 0.9,
        "synonym_match": 0.8
      }
    },
    "number_detection": {
      "patterns": [
        "integer",
        "decimal",
        "percentage",
        "currency",
        "scientific_notation"
      ],
      "exclude": [
        "page_numbers",
        "section_numbers",
        "list_numbers",
        "years_in_isolation"
      ],
      "include": [
        "statistical_values",
        "budget_amounts",
        "indicator_values",
        "demographic_data"
      ]
    },
    "source_detection": {
      "patterns": [
        "\\b(DANE)\\b",
        "\\b(Medicina Legal)\\b",
        "\\b(SISBEN)\\b",
        "\\b(DNP)\\b",
        "\\b(ADRES)\\b",
        "Ministerio de [A-Za-záéíóúñÑ]+",
        "Secretaría de [A-Za-záéíóúñÑ]+"
      ],
      "require_explicit_citation": true,
      "proximity_to_data": "within_same_paragraph_or_next"
    }
  },
  "scoring_formula": {
    "description": "M (Mandatory Sections) score computation",
    "formula": "M = Σ(section_score_i × weight_i) / Σ(weight_i)",
    "section_score_computation": {
      "checks": [
        "token_count >= min_tokens",
        "keyword_matches >= min_keywords",
        "number_count >= min_numbers",
        "sources_found >= min_sources (if applicable)"
      ],
      "section_score": "checks_passed / total_checks",
      "missing_section_score": 0.0
    },
    "critical_section_weight_multiplier": 2.0
  },
  "references": {
    "implementation": "src/farfan_pipeline/core/calibration/unit_layer.py::_compute_mandatory_sections",
    "configuration": "src/farfan_pipeline/core/calibration/config 2.py::UnitLayerConfig",
    "canonical_source": "canonic_description_unit_analysis.json"
  }
}
