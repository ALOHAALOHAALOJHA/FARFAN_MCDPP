{
  "specification_metadata": {
    "title": "PDT Parsing Specification",
    "version": "1.0.0",
    "description": "Formal specification for parsing Plan de Desarrollo Territorial (PDT) documents with hierarchical structure requirements, section thresholds, and matrix schemas",
    "created": "2024",
    "based_on": "canonic_description_unit_analysis.json",
    "scope": "Defines parsing rules, validation criteria, and data extraction requirements for PDT documents in the Farfan calibration pipeline"
  },
  "hierarchical_structure": {
    "description": "PDT documents follow a strict hierarchical structure with 4 levels: H1 (CAPÍTULO/Título), H2 (Línea estratégica), H3 (Programa), H4 (Sector)",
    "header_levels": {
      "H1": {
        "label": "CAPÍTULO/Título",
        "description": "Top-level structural divisions of the PDT",
        "format_patterns": [
          "CAPÍTULO [Número]. [Título]",
          "CAPÍTULO [Número]: [Título]",
          "TÍTULO [Número]: [Título]",
          "TÍTULO [Número]. [Título]"
        ],
        "examples": [
          "CAPÍTULO 5. BUENOS AIRES ACTÚA POR LA PAZ",
          "CAPÍTULO I: Diagnóstico municipal",
          "CAPÍTULO III PARTE ESTRATÉGICA",
          "TÍTULO II: Parte estratégica",
          "TÍTULO III: Componente financiero y plan plurianual de inversiones (PPI)"
        ],
        "numbering_schemes": [
          "arabic",
          "roman_uppercase"
        ],
        "validation_rules": {
          "require_numbering": true,
          "allow_colon_separator": true,
          "allow_period_separator": true,
          "case_sensitivity": false
        }
      },
      "H2": {
        "label": "Línea estratégica",
        "description": "Strategic lines or axes that organize the strategic part",
        "format_patterns": [
          "Línea estratégica [Número/Nombre]: [Título descriptivo]",
          "Línea Estratégica [Número]: [Título]",
          "[Número]. [Título]",
          "[Número].[Número]. [Título]"
        ],
        "examples": [
          "Línea estratégica I: Un futuro con proyección social",
          "Línea Estratégica 2: Familia...",
          "6.1. CINCO (5) INICIATIVAS PRIORIZADAS",
          "7.1 INSTRUMENTOS MONITORES Y DE EVALUACIÓN DEL PDM"
        ],
        "numbering_schemes": [
          "arabic",
          "roman_uppercase",
          "decimal"
        ],
        "validation_rules": {
          "must_be_child_of": "H1",
          "require_numbering": true,
          "allow_keyword_prefix": true,
          "keywords": ["Línea estratégica", "Línea Estratégica", "Eje estratégico"]
        }
      },
      "H3": {
        "label": "Programa",
        "description": "Programs that implement strategic lines",
        "format_patterns": [
          "Programa: [Nombre del programa]",
          "[Número].[Número].[Número]. [Título]"
        ],
        "examples": [
          "Programa: Salud Pública",
          "Programa: Promoción al acceso a la justicia",
          "2.5.1. AGRICULTURA Y DESARROLLO RURAL"
        ],
        "numbering_schemes": [
          "decimal",
          "none"
        ],
        "validation_rules": {
          "must_be_child_of": "H2",
          "allow_keyword_prefix": true,
          "keywords": ["Programa", "Programa:"],
          "optional_numbering": true
        }
      },
      "H4": {
        "label": "Sector",
        "description": "Sectoral components within programs",
        "format_patterns": [
          "Sector: [Nombre del sector]"
        ],
        "examples": [
          "Sector: Justicia y del Derecho",
          "Sector: Salud y Protección Social"
        ],
        "numbering_schemes": [
          "none"
        ],
        "validation_rules": {
          "must_be_child_of": "H3",
          "require_keyword_prefix": true,
          "keywords": ["Sector", "Sector:"],
          "optional_numbering": true
        }
      }
    },
    "hierarchy_validation": {
      "require_valid_parent_child": true,
      "allow_skipped_levels": false,
      "min_hierarchy_depth": 2,
      "max_hierarchy_depth": 4
    }
  },
  "expected_block_sequence": {
    "description": "PDT documents must follow this canonical sequence of major blocks",
    "sequence": [
      "Diagnóstico",
      "Parte Estratégica",
      "PPI",
      "Seguimiento"
    ],
    "sequence_validation": {
      "enforce_order": true,
      "allow_missing_blocks": false,
      "count_inversions": true,
      "inversion_penalty": {
        "0_inversions": 1.0,
        "1_inversion": 0.5,
        "2_or_more_inversions": 0.0
      }
    },
    "block_aliases": {
      "Diagnóstico": [
        "Diagnóstico",
        "DIAGNÓSTICO",
        "Diagnóstico territorial",
        "Caracterización",
        "CAPÍTULO I",
        "Título I"
      ],
      "Parte Estratégica": [
        "Parte Estratégica",
        "PARTE ESTRATÉGICA",
        "Parte estratégica",
        "Componente estratégico",
        "CAPÍTULO II",
        "Título II"
      ],
      "PPI": [
        "PPI",
        "Plan Plurianual de Inversiones",
        "Plan plurianual de inversiones",
        "Componente financiero",
        "CAPÍTULO III",
        "Título III"
      ],
      "Seguimiento": [
        "Seguimiento",
        "SEGUIMIENTO",
        "Seguimiento y evaluación",
        "Monitoreo y evaluación",
        "Sistema de seguimiento",
        "CAPÍTULO IV",
        "Título IV"
      ]
    },
    "optional_blocks": {
      "Marco Normativo": {
        "position": "after_diagnostico_or_before_estrategica",
        "aliases": [
          "Marco Normativo",
          "Marco normativo y alineación",
          "Fundamentos normativos"
        ]
      },
      "Paz/PDET": {
        "position": "independent_chapter",
        "aliases": [
          "Buenos Aires actúa por la paz",
          "Capítulo de Paz",
          "PDET",
          "Programas de Desarrollo con Enfoque Territorial"
        ]
      }
    }
  },
  "section_detection": {
    "description": "Rules for detecting and extracting section boundaries",
    "transition_markers": {
      "diagnostico_to_estrategia": [
        "...la cual es fundamental para el capítulo II que contiene la parte estratégica",
        "...Dando continuidad al proceso de análisis, se presentará a continuación la estructura general",
        "TÍTULO II PARTE ESTRATÉGICA",
        "CAPÍTULO II"
      ],
      "estrategia_to_ppi": [
        "TÍTULO III PARTE FINANCIERA",
        "Plan Plurianual de Inversiones",
        "Componente financiero",
        "CAPÍTULO III"
      ],
      "ppi_to_seguimiento": [
        "SISTEMA DE SEGUIMIENTO",
        "Seguimiento y evaluación",
        "Mecanismos de seguimiento y control",
        "CAPÍTULO IV"
      ]
    },
    "semantic_boundaries": {
      "paragraph_length_by_section": {
        "Diagnóstico": "long_to_medium",
        "Parte Estratégica_narrativa": "medium",
        "Parte Estratégica_operacional": "short",
        "Seguimiento": "short"
      },
      "table_integration_rules": {
        "diagnostic_tables": "appear_after_introducing_paragraph",
        "operational_matrices": "autonomous_blocks_in_final_chapters",
        "indicator_matrices": "section_PPI_or_annexes"
      }
    }
  },
  "references": {
    "canonical_source": "canonic_description_unit_analysis.json",
    "related_specifications": [
      "section_requirements.json",
      "matrix_schemas.json"
    ],
    "legal_framework": [
      "Ley 152 de 1994",
      "Ley 388 de 1997",
      "Constitución Política (Art. 339)"
    ]
  }
}
