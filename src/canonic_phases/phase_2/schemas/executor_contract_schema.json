{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://farfan.pipeline/schemas/phase2/executor-contract.json",
  "title": "ExecutorContract",
  "description": "Schema for Phase 2 executor contract specification",
  "type": "object",
  "required": [
    "contract_id",
    "question_id",
    "executor_id",
    "method_binding",
    "validation",
    "expected_outputs"
  ],
  "properties": {
    "contract_id": {
      "type": "string",
      "description": "Unique contract identifier"
    },
    "question_id": {
      "type": "string",
      "pattern": "^Q[0-9]{3}$",
      "description": "Question this contract serves"
    },
    "executor_id": {
      "type": "string",
      "description": "Executor implementing this contract"
    },
    "method_binding": {
      "type": "object",
      "required": ["methods", "orchestration"],
      "properties": {
        "methods": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"},
          "description": "Bound method names"
        },
        "orchestration": {
          "type": "string",
          "enum": ["sequential", "parallel", "conditional"],
          "description": "Method orchestration strategy"
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["preconditions", "postconditions"],
      "properties": {
        "preconditions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Required conditions before execution"
        },
        "postconditions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Guaranteed conditions after execution"
        }
      }
    },
    "expected_outputs": {
      "type": "object",
      "required": ["cardinality", "format"],
      "properties": {
        "cardinality": {
          "type": "integer",
          "const": 10,
          "description": "Each question produces 10 outputs (1 per PA)"
        },
        "format": {
          "type": "string",
          "enum": ["text", "structured", "hybrid"]
        }
      }
    }
  },
  "additionalProperties": false
}
