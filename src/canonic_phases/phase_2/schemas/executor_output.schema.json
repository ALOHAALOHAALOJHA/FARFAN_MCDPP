{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://farfan.pipeline/schemas/executor_output.schema.json",
  "version": "1.0.0",
  "title": "Executor Output Schema",
  "description": "Standard output format for executor results",
  "type": "object",
  "required": ["executor_id", "question_id", "success", "timestamp"],
  "properties": {
    "executor_id": {
      "type": "string",
      "description": "Executor identifier",
      "pattern": "^Q[0-9]{3}$"
    },
    "question_id": {
      "type": "string",
      "description": "Question identifier from questionnaire",
      "pattern": "^Q[0-9]{3}$"
    },
    "policy_area_id": {
      "type": "string",
      "description": "Policy area identifier",
      "pattern": "^PA(0[1-9]|10)$"
    },
    "dimension_id": {
      "type": "string",
      "description": "Causal dimension identifier",
      "pattern": "^DIM0[1-6]$"
    },
    "success": {
      "type": "boolean",
      "description": "Whether execution succeeded"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of execution",
      "format": "date-time"
    },
    "execution_time_s": {
      "type": "number",
      "description": "Execution time in seconds",
      "minimum": 0
    },
    "result": {
      "type": "object",
      "description": "Executor result data",
      "properties": {
        "answer": {
          "type": "string",
          "description": "Generated answer text"
        },
        "confidence": {
          "type": "number",
          "description": "Confidence score [0.0, 1.0]",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "evidence": {
          "type": "array",
          "description": "Supporting evidence",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "source": { "type": "string" },
              "relevance": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 1.0
              }
            }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "Error information if execution failed",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "traceback": { "type": "string" }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Execution metrics",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
