{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://farfan.pipeline/schemas/calibration_policy.schema.json",
  "version": "1.0.0",
  "title": "Calibration Policy Schema",
  "description": "Calibration values defining quality thresholds (WHAT quality)",
  "type": "object",
  "required": ["cohort", "calibration_date", "quality_thresholds"],
  "properties": {
    "cohort": {
      "type": "string",
      "description": "Cohort identifier (e.g., COHORT_2024)",
      "pattern": "^COHORT_[0-9]{4}$"
    },
    "calibration_date": {
      "type": "string",
      "description": "ISO 8601 date of calibration",
      "format": "date"
    },
    "quality_thresholds": {
      "type": "object",
      "description": "Quality threshold values",
      "required": ["cqvr_produccion", "cqvr_reformular"],
      "properties": {
        "cqvr_produccion": {
          "type": "number",
          "description": "Minimum CQVR score for production",
          "minimum": 0.0,
          "maximum": 100.0
        },
        "cqvr_reformular": {
          "type": "number",
          "description": "Minimum CQVR score before reformulation required",
          "minimum": 0.0,
          "maximum": 100.0
        }
      }
    },
    "fusion_weights": {
      "type": "object",
      "description": "Method fusion weights by dimension",
      "patternProperties": {
        "^DIM0[1-6]$": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          }
        }
      }
    },
    "intrinsic_scores": {
      "type": "object",
      "description": "Intrinsic quality scores by method",
      "additionalProperties": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0
      }
    }
  },
  "additionalProperties": false
}
