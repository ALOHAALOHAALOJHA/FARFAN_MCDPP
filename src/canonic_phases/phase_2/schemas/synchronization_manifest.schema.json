{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://farfan.pipeline/schemas/synchronization_manifest.schema.json",
  "version": "1.0.0",
  "title": "Synchronization Manifest Schema",
  "description": "Manifest for executor-chunk synchronization validation",
  "type": "object",
  "required": ["manifest_version", "generation_timestamp", "bindings", "validation_summary"],
  "properties": {
    "manifest_version": {
      "type": "string",
      "description": "Manifest schema version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generation_timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of manifest generation",
      "format": "date-time"
    },
    "execution_plan_id": {
      "type": "string",
      "description": "Unique identifier for the execution plan"
    },
    "bindings": {
      "type": "array",
      "description": "Executor-chunk bindings",
      "items": {
        "type": "object",
        "required": ["executor_id", "chunk_id", "policy_area_id", "dimension_id"],
        "properties": {
          "executor_id": {
            "type": "string",
            "pattern": "^Q[0-9]{3}$"
          },
          "chunk_id": {
            "type": "string",
            "pattern": "^PA(0[1-9]|10)-DIM0[1-6]$"
          },
          "policy_area_id": {
            "type": "string",
            "pattern": "^PA(0[1-9]|10)$"
          },
          "dimension_id": {
            "type": "string",
            "pattern": "^DIM0[1-6]$"
          },
          "contract_path": {
            "type": "string",
            "description": "Path to executor contract file"
          }
        }
      },
      "minItems": 300,
      "maxItems": 300
    },
    "validation_summary": {
      "type": "object",
      "description": "Summary of validation results",
      "required": ["total_bindings", "unique_executors", "unique_chunks", "validation_passed"],
      "properties": {
        "total_bindings": {
          "type": "integer",
          "minimum": 0
        },
        "unique_executors": {
          "type": "integer",
          "minimum": 0,
          "maximum": 300
        },
        "unique_chunks": {
          "type": "integer",
          "minimum": 0,
          "maximum": 60
        },
        "validation_passed": {
          "type": "boolean"
        },
        "errors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "warnings": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
