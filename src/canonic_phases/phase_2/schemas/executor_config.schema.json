{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://farfan-pipeline.org/schemas/executor_config.schema.json",
  "title": "Executor Configuration Schema",
  "description": "Schema for Phase 2 executor configuration. Enforces deterministic, schema-validated config loading with zero runtime file I/O.",
  "type": "object",
  "version": "1.0.0",
  "required": [
    "executor_id",
    "executor_type",
    "parameters"
  ],
  "properties": {
    "executor_id": {
      "type": "string",
      "description": "Unique identifier for the executor instance",
      "pattern": "^[A-Za-z0-9_-]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "executor_type": {
      "type": "string",
      "description": "Type of executor (must map to registered executor class)",
      "enum": [
        "quantitative_analysis",
        "qualitative_analysis",
        "causal_inference",
        "bayesian_scoring",
        "text_classification",
        "entity_extraction",
        "relationship_mapping",
        "aggregation"
      ]
    },
    "parameters": {
      "type": "object",
      "description": "Executor-specific configuration parameters",
      "additionalProperties": true
    },
    "seed": {
      "type": "integer",
      "description": "Random seed for deterministic execution",
      "minimum": 0
    },
    "resource_limits": {
      "type": "object",
      "properties": {
        "max_memory_mb": {
          "type": "integer",
          "minimum": 100,
          "maximum": 32768
        },
        "max_execution_time_seconds": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3600
        }
      }
    },
    "contracts_enabled": {
      "type": "boolean",
      "description": "Whether to enforce runtime contracts",
      "default": true
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "created_by": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
