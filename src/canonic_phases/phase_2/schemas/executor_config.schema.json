{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://farfan.pipeline/schemas/executor_config.schema.json",
  "version": "1.0.0",
  "title": "Executor Configuration Schema",
  "description": "Runtime configuration for executor execution (HOW parameters only)",
  "type": "object",
  "required": ["executor_id", "timeout_s"],
  "properties": {
    "executor_id": {
      "type": "string",
      "description": "Unique identifier for the executor (e.g., Q001, Q002)",
      "pattern": "^Q[0-9]{3}$"
    },
    "timeout_s": {
      "type": "integer",
      "description": "Maximum execution time in seconds",
      "minimum": 1,
      "maximum": 3600,
      "default": 120
    },
    "retry": {
      "type": "integer",
      "description": "Number of retry attempts on failure",
      "minimum": 0,
      "maximum": 10,
      "default": 3
    },
    "temperature": {
      "type": "number",
      "description": "LLM sampling temperature (0.0 = deterministic)",
      "minimum": 0.0,
      "maximum": 2.0,
      "default": 0.0
    },
    "max_tokens": {
      "type": "integer",
      "description": "Maximum LLM output tokens",
      "minimum": 1,
      "maximum": 32000,
      "default": 4096
    },
    "memory_limit_mb": {
      "type": "integer",
      "description": "Memory limit in megabytes",
      "minimum": 128,
      "maximum": 8192,
      "default": 2048
    },
    "enable_profiling": {
      "type": "boolean",
      "description": "Whether to enable execution profiling",
      "default": false
    },
    "seed": {
      "type": "integer",
      "description": "Random seed for reproducibility",
      "minimum": 0
    },
    "extra": {
      "type": "object",
      "description": "Additional executor-specific parameters",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
